<table>
  <tr>
    <th>Date</th>
    <th>Location</th>
    <th>Host</th>

    <th>Musician</th>
    <th>Ticket price</th>
    <th>Tickets min</th>
    <th>Tickets max</th>
    <th>Tickets sold</th>
    <th>Link to Host page</th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.date %></td>
    <td><%= show.location %></td>
	<td><%= show.host.email %></td>

    <td><%= show.user_id %></td>
    <td><%= show.ticket_price %></td>
    <td><%= show.tickets_min %></td>
    <td><%= show.tickets_max %></td>
    <td><%= show.guests.count %></td>
    <td><%= link_to 'Host', host_path(show.web_string) %></td>

    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
<% if @user.admin? %>
    <td><%= link_to 'Destroy', show, confirm: 'Are you sure?', method: :delete %></td>
<% end %>
  </tr>
<% end %>
</table>